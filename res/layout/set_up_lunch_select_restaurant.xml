<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/select_restaurant_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:padding="5dip"
         >

        <TextView
            android:id="@+id/restaurant_select_label"
            style="@style/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:text="Please select the Restaurant"
            android:textColor="#FFFFFF" />

        <RelativeLayout
            android:id="@+id/restaurant_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_below="@id/restaurant_select_label"
            android:padding="5dip"
            style="@style/normalText"
             >

            <TextView
                android:id="@+id/textResName"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textResNeiborhood"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textResName"
                android:text="Neiborhood"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textResLocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location" 
                android:layout_toRightOf="@id/textResNeiborhood"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listview"
            style="@style/titleText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:divider="@drawable/divider"
            android:layout_below="@id/restaurant_title" >
        </ListView>
    </RelativeLayout>

</LinearLayout>